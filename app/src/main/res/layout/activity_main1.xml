<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/infoip"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/msg"
        android:layout_width="90dp"
        android:layout_height="213dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_alignBottom="@+id/clientView"
        android:layout_marginBottom="17dp"
        android:layout_alignTop="@+id/clientView"
        android:layout_alignRight="@+id/infoip"
        android:layout_alignEnd="@+id/infoip"
        android:layout_toRightOf="@+id/clientView"
        android:layout_toEndOf="@+id/clientView" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Server"
        android:text="Stream"
        android:visibility="visible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="360dp"
        android:layout_alignBottom="@+id/msg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignEnd="@+id/msg"
        android:layout_alignRight="@+id/msg"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:onClick="Client"
        android:text="Play a stream"
        android:visibility="visible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="360dp" />

    <TextView
        android:id="@+id/clientView"
        android:layout_width="148dp"
        android:layout_height="214dp"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="46dp"
        tools:ignore="MissingConstraints"
        android:layout_below="@+id/infoip"
        android:layout_alignRight="@+id/infoip"
        android:layout_alignEnd="@+id/infoip"
        android:layout_marginRight="174dp"
        android:layout_marginEnd="174dp"
        android:layout_marginTop="37dp" />


</RelativeLayout>



